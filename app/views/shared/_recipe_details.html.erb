    <div class="recepie_details_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-md-6">
                    <div class="recepies_thumb">
                        <img src="https://res.cloudinary.com/optprime/image/upload/v1658841777/community_blog/recepie_details_hzgxw3.png" alt="Recipe photo">
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="recepies_info">
                        <h2><%= @recipe.name %></h2>
                        <div class="resepies_details">
                            <ul>
                                <li><p><strong>Preparation Time</strong> : <%= @recipe.preparation_time %> hours </p></li>
                                <li><p><strong>Cooking Time</strong> : <%= @recipe.cooking_time %> hours </p></li>
                            </ul>
                        </div>
                        <%= button_to "Delete Recipe", recipe_path(@recipe.id), method: :delete, class: "line_btn" %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                <h2>Steps to follow</h2>
                    <div class="recepies_text">
                    <p><%= @recipe.description %></p>
                    <h3 class="py-4 text-center">Add recipe ingredients</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>