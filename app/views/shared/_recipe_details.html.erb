    <div class="recepie_details_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-md-6">
                    <div class="recepies_thumb">
                        <img src="https://res.cloudinary.com/optprime/image/upload/v1658841777/community_blog/recepie_details_hzgxw3.png" alt="Recipe photo">
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="recepies_info">
                        <div class="d-flex justify-content-end mb-4">
                        <span class="pr-4">Public</span>
                         <div class="form-check form-switch text-center pl-4">
                         <% if current_user.id == @recipe.user.id %> 
                            <%= button_to recipe_path(@recipe.id), :method => :patch do %>
                                <% if @recipe.public %>
                                    <i class="fa-solid fa-toggle-on" style="font-size:24px;color:green"></i>
                                <% else %>
                                    <i class="fa-solid fa-toggle-off" style="font-size:24px;color:green"></i>
                                <% end %>
                            <% end %>
                        <% end %>
                        </div>
                        </div>
                        <h2><%= @recipe.name %></h2>
                        <div class="resepies_details">
                            <ul>
                                <li><p><strong>Preparation Time</strong> : <%= @recipe.preparation_time %> hours </p></li>
                                <li><p><strong>Cooking Time</strong> : <%= @recipe.cooking_time %> hours </p></li>
                            </ul>
                        </div>
                        <% if user_signed_in? && @recipe.user == current_user %>
                            <%= button_to "Delete Recipe", recipe_path(@recipe.id), method: :delete, class: "line_btn" %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                <h2>Steps to follow</h2>
                    <div class="recepies_text">
                        <p><%= @recipe.description %></p>
                        <h3 class="py-4 text-center">Add recipe ingredients</h3>
                    </div>
                </div>
             <%= render partial: "shared/ingredients", locals: { recipe: @recipe } %>   
            </div>
        </div>
    </div>